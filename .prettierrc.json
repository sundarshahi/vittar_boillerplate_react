{
	"arrowParens": "avoid",
	"bracketSameLine": false,
	"bracketSpacing": true,
	"jsxSingleQuote": true,
	"plugins": ["./node_modules/prettier-plugin-tailwindcss"],
	"printWidth": 120,
	"quoteProps": "as-needed",
	"semi": false,
	"singleQuote": true,
	"tabWidth": 2,
	"trailingComma": "none",
	"useTabs": true,
	"importOrder": [
		"^(^react$|^@react|^react|^recoil|redux|vite)",
		"^(^antd|^rsuite|^@emotion|^emotion|theme-ui|^semantic-ui|^@rebass|^@chakra-ui|bootstrap|tailwind|bulma|mui|^@blueprintjs|reactstrap|^@mantine)",
		"<THIRD_PARTY_MODULES>",
		"^@(.*)$",
		"^~(.*)$",
		"^[./]"
	],
	"importOrderGroupNamespaceSpecifiers": true,
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true
}
